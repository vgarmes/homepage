		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"types": ["@astrojs/image/client"],
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"]
		}
	}
}
